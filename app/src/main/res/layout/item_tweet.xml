<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDisplayName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:autoLink="all"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2sp"
        android:linksClickable="true"
        android:textColor="#000000"
        tools:text="I don't know if you know but this is BTS World Domination" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="344dp"
        android:layout_height="257dp"
        android:layout_below="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="#020000"
        android:textStyle="bold"
        tools:text="BTSDomination" />

    <TextView
        android:id="@+id/tvDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvName"
        android:textColor="#666666"
        android:textSize="14sp"
        tools:text="BTSDomination" />

    <TextView
        android:id="@+id/tvTimeSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/tvName"
        android:gravity="right"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="5 min ago" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:tint="#888888"
        app:srcCompat="@drawable/reply" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="135dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/ivReply"
        android:tint="#888888"
        app:srcCompat="@drawable/ic_vector_retweet_stroke_a" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignEnd="@+id/tvBody"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:tint="#888888"
        app:srcCompat="@drawable/ic_vector_heart_stroke_a" />

    <TextView
        android:id="@+id/rtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivRetweet"
        tools:text="1200" />


</RelativeLayout>